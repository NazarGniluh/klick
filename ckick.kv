                            source: 'atb.jpg'
                        Label:
                            size_hint: 1, 1
                            pos_hint: {'x': 0, 'center_y':0.5}
                            text: "100 usd"

                    FloatLayout:
                        Button:
                            size_hint: 1, 1
                            pos_hint: {'center_x': 0.5, 'center_y':0.5}

<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: score_lbl
            text: "0"
        FloatLayout:
            Image:
                id: ball
                size_hint: 0.4, 0.4
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "pngwing.com (10).png"
            Button:
                size_hint: 0.4, 0.4
                background_color: 0,0,0,0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.cli()
                on_release: root.cli1()
        Button:
            background_color: 0,0,1,0.8
            text: "Нажми"


<MiniScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "ЛАУНЧЕР: для авторизації гри"
        TextInput(hint_text="Write Here", sixe_hint=(.4,.1) pos=(250,250))

        Button:
            background_color: 10,7,0,0.5
            text: "АВТОРИЗАЦІЯ"
            on_press: root.Click()
            on_release: root.Click()


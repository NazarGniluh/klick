<MainScreen>:
    FloatLayout:
        Image:
            source: 'ukrpole.jpg'
            allow_stretch: True
            keep_ratio: False
    BoxLayout:
        orientation: "vertical"
        Label:
            id: score_lbl
            markup: True
        FloatLayout:
            Image:
                id: ball
                size_hint: 0.4, 0.4
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "flagukr.jpg"
            Button:
                size_hint: 0.4, 0.4
                background_color: 0,0,0,0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.cli()
                on_release: root.cli1()
        Button:
            background_color: 0,0,0,0
            text: "МАГАЗИН"
            color: 255, 0, 51
            on_press: root.shop_switch()


<MiniScreen>:
    FloatLayout:
        Image:
            source: 'pole.jpg'
            allow_stretch: True
            keep_ratio: False
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "ГРА: КЛІКЕР"
            color: 0,35,60


        Button:
            background_color: 10,7,0,0
            text: "ВХІД В ГРУ"
            color: 255,40,0
            on_press: root.Click()
            on_release: root.Click()



<ShopScreen>:
    FloatLayout:
        Image:
            source: 'market.png'
            allow_stretch: True
            keep_ratio: False
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.2
                Button:
                    text: "Назад"
                    color: 255,0,0
                    background_color: 0,0,0,0
                    on_press: root.shop_switch()
                Label:
                    text: "РАХУНОК"
                    color: 255,0,0

            ScrollView:
                size_hint_y: None
                size_hint: 1, 1
                GridLayout:
                    id: shopItems
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 1
                    row_default_height: 100

                    FloatLayout:
                        Button:
                            size_hint: 1, 1
                            pos_hint: {'center_x': 0.5, 'center_y':0.5}
                            background_color: 80,2,0,1
                            on_press: root.buy(50, 100)

                        Image:
                            size_hint: 0.1, 1
                            pos_hint: {'x': 0, 'center_y':0.5}
